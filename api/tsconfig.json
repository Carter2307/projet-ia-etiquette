{
  "compilerOptions":  {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./src/types"],
    "outDir": "./dist",
    "baseUrl": ".",
    "lib": ["es6"],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  }
}